---
import { getCollection, render } from 'astro:content'
import { allLocales } from '@/config'
import { getLangFromLocale, getLangRouteParam } from '@/i18n/lang'
import Layout from '@/layouts/Layout.astro'

export async function getStaticPaths() {
  return allLocales.map(lang => ({
    params: { lang: getLangRouteParam(lang) },
  }))
}

const currentLang = getLangFromLocale(Astro.currentLocale)
// Get privacy-policy page content with different language
const allPrivacyPolicyEntries = await getCollection('privacyPolicy')
const privacyPolicyEntry = allPrivacyPolicyEntries.find(entry => entry.data.lang === currentLang)
  ?? allPrivacyPolicyEntries.find(entry => entry.data.lang === '')
const { Content } = privacyPolicyEntry ? await render(privacyPolicyEntry) : { Content: null }
---

<Layout>
  <!-- Decorative Line -->
  <div class="uno-decorative-line" />
  <!-- Privacy Policy Page Content -->
  <div class="heti">
    {Content && <Content />}
  </div>
</Layout>
